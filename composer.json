{
    "name": "voniersa/sitemap-generator",
    "description": "A small PHP script that searches your website for links and generates a sitemap.xml file out of them.",
    "type": "library",
    "authors": [
        {
            "name": "Sascha Vonier",
            "email": "vonier1998@gmx.de"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-dom": "*",
        "guzzlehttp/guzzle": "^7.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^3.13",
        "slevomat/coding-standard": "^8.22"
    },
    "license": "MIT",
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
